set -e

info () {
  printf "\r  [ \033[00;34m..\033[0m ] $1\n"
}

success () {
  printf "\r\033[2K  [ \033[00;32mOK\033[0m ] $1\n"
}

install () {
  info "Installing $1"
  sh -c $1
  success "$1 installed"
}

find . -name install.sh | while read installer ; do install "${installer}" ; done | true

success "All topics were installed successfully"
