set -e

info () {
  printf "\r  [ \033[00;34m..\033[0m ] $1\n"
}

success () {
  printf "\r\033[2K  [ \033[00;32mOK\033[0m ] $1\n"
}

install () {
  info "Installing $1"
  sh $1
  success "$1 installed"
}

find . -name install.sh | while read installer ; do install "${installer}" ; done

success "All topics were installed successfully"
success "If you see and error message after this line, Chill out"
success "All went well."
