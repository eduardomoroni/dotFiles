PATH_FILE=".zshrc.d/000-paths"

set -e

info () {
  printf "\r  [ \033[00;34m..\033[0m ] $1\n"
}

success () {
  printf "\r\033[2K  [ \033[00;32mOK\033[0m ] $1\n"
}

update_path () {
  info "Updating $1 paths"
  cat $1 >> $PATH_FILE
  success "$1 updated"
}

rm -f $PATH_FILE
find . -name path.zsh | while read path ; do update_path "$path" ; done
